<div class="row">
    <div class="col-8 offset-2">
        <div class="row result">
            <h1 class="col-6"><%= @lesson.category.title %></h1>
            <div  class="col-6 text-right d-inline-block">
                <h3>Result: <%= @result %> of <%= @lesson.category.words.count %></h3>
            </div>
        </div>
        <table class="table mt-3 table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Word</th>
                    <th scope="col">Your Answer</th>
                    <th scope="col">Correct Answer</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <% @lesson.answers.each do |answer| %>
                    <tr>
                        <td><%= answer.word.content %></td>
                        <td><%= answer.choice.content %></td>
                        <td><%= answer.word.correct_answer %></td>
                        <td>
                            <% if answer.choice.is_correct? %>
                                <i class= "fa fa-check"><i>
                            <% else %>
                                <i class= "fa fa-times"><i>
                            <% end %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>