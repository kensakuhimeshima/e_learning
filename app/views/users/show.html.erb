<div class="row ml-2">
    <div class="col-md-4">
        <div class="jumbotron bg-dark">
            <div class="card mx-auto" style="width: 16rem;">
                <% if @user.avatar %>
                    <%#= image_tag '#' %>
                <% else%>
                    <%= image_tag 'image2.jpeg', class: "card-img-top"%>
                    <a class="btn btn-outline-dark btn-sm" href="#">View profile</a>
                    <a class="btn btn-outline-dark btn-sm mt-2" href="#">Update profile</a>
                <% end %>
                <div class="card-body text-center">
                    <h5 class="card-title"><%= @user.name %></h5>
                    <p class="card-text"><%= @user.email %></p>
                </div>
                <ul class="list-group list-group-flush text-center">
                    <li class="list-group-item">Folowers 0</li>
                    <li class="list-group-item">Follewing 0</li>
                </ul>
                <div class="card-body text-center">
                    <button type="button" class="btn btn-dark btn-lg">Words learned</button>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8 jumbotron text-center pt-5 text-white bg-dark">
        <h1>Activities</h1>
    </div>
</div>


