<div class="row categories">
    <div class="col-4 offset-4 mt-5">
        <h1 class="text-center">New category</h1>
        <br>
        <%= form_for :category, url: "" do |f| %>
            <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class: "form-control" %>
            </div>
            
            <div class="form-group">
                <%= f.label :description %>
                <%= f.text_area :description, size: '48x3' %>
            </div>

            <div class="actions">
                <%= f.submit "Create category", class: "btn btn-dark btn-block" %>
            </div>
        <% end %>
        <br>
        <h5><%= link_to 'Back', admin_categories_path %></h5>    
    </div>
</div>
