<%= form_for [:admin, @category] do |f| %>
    <%= render "shared/error_messages", object: @category %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
    </div>
    
    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, size: '48x3' %>
    </div>

    <div class="actions">
        <%= f.submit btn_msg, class: "btn btn-dark btn-block" %>
    </div>
<% end %>